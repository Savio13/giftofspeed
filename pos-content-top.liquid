{%- if settings.pos_content_top_use -%}

{%- comment -%}--- MENU ---{%- endcomment -%}
{%- assign _active_count = 0 -%}
{%- for i in (1..MAX_MENU) -%}
{%- assign m_use 		= 'mmenu_use_' 		| append: i -%}
{%- assign m_pos 		= 'mmenu_pos_' 		| append: i -%}
{%- assign m_layout 		= 'mmenu_layout_' 	| append: i -%}
{%- assign _layout		= settings[m_layout] -%}
{%- assign _layout		= '0' -%}

{%- if _layout == '0' or _layout == CURRENT_LAYOUT -%}
{%- if settings[m_use] and settings[m_pos] == 'content_top' -%}
{%- assign _active_count = _active_count | plus: 1 -%}
{%- endif -%}
{%- endif -%}
{%- endfor -%}

{%- if _active_count > 0 -%}
<div class="overflow-menu2">
  {%- include 'mega-menus' with 'content_top' -%}
</div>
{%- endif -%}

