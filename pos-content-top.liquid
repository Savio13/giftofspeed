{%- include 'advanced-grid' with 'content_top' -%}
{%- comment -%}--- LATEST BLOG ---{%- endcomment -%}
{%- include 'latest-blogs' with 'content_top' -%}
{%- comment -%}--- CUSTOM WIDGET ---{%- endcomment -%}
{%- include 'custom-widgets' with 'content_top' -%}
{%- comment -%}--- PRODUCTS TABS ---{%- endcomment -%}
{%- include 'products-tabs' with 'content_top' -%}
{%- comment -%}--- TESTIMONIALS ---{%- endcomment -%}
{%- include 'testimonials' with 'content_top' -%}

{%- endif -%}