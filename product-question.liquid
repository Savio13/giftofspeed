{%- if settings.product_question -%}
<div id="popup-product-question" class="popup mfp-hide">
  <h4>{{'products.question.title' | t}}</h4>
  {%- form 'contact' -%}
  <input type="hidden" name="contact[product]" value="{{product.title | escape}} ({{shop.url | escape}}{{product.url | within: collection | escape}})" />
  <div class="form-contact">
    <fieldset>
      <div class="contact-label">
        <label for="input-name" class="required"> {{'products.question.name' | t}}</label>
        <div>
          <input required="required" type="text" id="input-name" class="form-control" value="{%- if form.name -%}{{form.name}}{%- elsif customer -%}{{customer.first_name}} {{customer.last_name}}{%- endif -%}" name="contact[name]" />
        </div>
      </div>
      <div class="contact-label">
        <label for="input-email" class="required"> {{'products.question.email' | t}}</label>
        <div>
          <input required="required" type="email" id="input-email" class="form-control" value="{%- if form.email -%}{{form.email}}{%- elsif customer -%}{{customer.email}}{%- endif -%}" name="contact[email]" />
        </div>
      </div>
      <div class="contact-label">
        <label for="input-message" class="required"> {{'products.question.message' | t}}</label>
        <div>
          <textarea required="required" id="input-message" rows="7" class="form-control" name="contact[body]">{{form.body}}</textarea>
        </div>
      </div>
    </fieldset>
    <input class="btn btn-primary" type="submit" value="{{'products.question.submit' | t}}" />
  </div>
  {%- endform -%}
</div>
{%- endif -%}