{%- assign _id = block.id -%}
{%- assign _acm_type 	= block.type  -%}
{%- assign _acm_title 	= block.settings.acm_title -%}
{%- assign _acm_text 	= block.settings.acm_text  -%}
{%- assign _acm_skin 	= block.settings.acm_skin  -%}
{%- assign _acm_limit	= block.settings.acm_limit | plus: 0 -%}
{%- assign _acm_items 	= linklists[block.settings.acm_llist].links -%}
{%- assign _acm_prods 	= collections[block.settings.acm_collection].products -%}
{%- assign _acm_product = all_products[block.settings.acm_product] -%}
{%- assign _acm_width	= block.settings.acm_image_width -%}
{%- assign _acm_height	= block.settings.acm_image_height -%}
{%- assign _acm_carousel	= block.settings.acm_carousel -%}
{%- assign _acm_rows	= block.settings.acm_rows | plus: 0  -%}
{%- assign _acm_items_per_row	= block.settings.acm_items_per_row | plus: 0 -%}


{%- if _acm_width == blank -%}
{%- assign _acm_width = '100' -%}
{%- endif -%}
{%- if _acm_height == blank -%}
{%- assign _acm_height = '100' -%}
{%- endif -%}
{%- assign _acm_url_imgdim = _acm_width | append: 'x' | append: _acm_height -%}
{%- if _acm_skin == blank -%}
{%- assign _acm_skin	= 'default' -%}
{%- endif -%}

{%- if _acm_limit == 0 -%}
{%- assign _acm_limit = 12 -%}
{%- endif -%}

{%- if _acm_type == 'html' -%}
{{_acm_text}}
{%- elsif _acm_type == 'box' -%}

{%- assign _t = 'footer_bottom,footer,footer_top,footer_left,footer_right,customfooter_top,customfooter_bottom,customfooter' | split: ',' -%}
{%- if _t contains _ag_pos -%}
<h4>{{_acm_title}}</h4>
<div class="strip-line"></div>
<div class="clearfix" style="clear:both">{{_acm_text}}</div>
{%- else -%}
<div class="box">
<div class="box-heading">
{{_acm_title}}
</div>
<div class="strip-line"></div>
<div class="box-content">
{{_acm_text}}
</div>
</div>
{%- endif -%}
{%- elsif _acm_type == 'links' -%}
{%- assign _skin_snippet = 'ag-links-' | append: _acm_skin -%}
{%- include _skin_snippet -%}

{%- elsif _acm_type == 'one_product' -%}
{%- assign _skin_snippet = 'ag-product-' | append: _acm_skin -%}
{%- include _skin_snippet -%}

{%- elsif _acm_type == 'products' -%}
{%- assign _skin_snippet = 'ag-products-' | append: _acm_skin -%}
{%- include _skin_snippet -%}

{%- elsif _acm_type == 'products_tabs' -%}
{%- assign _acm_skin = 'default' -%}
{%- assign _skin_snippet = 'ag-productstabs-' | append: _acm_skin -%}
{%- include _skin_snippet -%}

{%- elsif _acm_type == 'newsletter' -%}
{%- assign _placeholder = 'general.footer.mailchimp.email_address' | t -%}
{%- assign _bttext = 'general.footer.mailchimp.subscribe_button' | t -%}
{%- assign _skin_snippet = 'ag-newsletter-' | append: _acm_skin -%}
{%- include _skin_snippet -%}

{%- elsif _acm_type == 'latest_blogs' -%}
{%- assign _skin_snippet = 'ag-latest-blogs-' | append: _acm_skin -%}
{%- include _skin_snippet -%}
{%- else -%}
{%- endif -%}