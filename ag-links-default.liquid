{%- assign _items_length = _acm_items | size -%}
{%- assign _columns = _items_length | divided_by: _acm_limit -%}
{%- assign _remainder = _items_length | modulo: _acm_limit -%}

{%- if _remainder > 0 -%}
{%- assign _columns = _columns | plus: 1 -%}
{%- endif -%}

{%- assign _class = '3' -%}

{%- if _columns == 1 -%}{%- assign _class = '12' -%}{%- endif -%}
{%- if _columns == 2 -%}{%- assign _class =  '6' -%}{%- endif -%}
{%- if _columns == 3 -%}{%- assign _class =  '4' -%}{%- endif -%}
{%- if _columns == 4 -%}{%- assign _class =  '3' -%}{%- endif -%}
{%- if _columns == 5 -%}{%- assign _class = '25' -%}{%- endif -%}
{%- if _columns == 6 -%}{%- assign _class =  '2' -%}{%- endif -%}

{%- assign _t = 'footer_bottom,footer,footer_top,footer_left,footer_right,customfooter_top,customfooter_bottom,customfooter' | split: ',' -%}
{%- if _t contains _ag_pos -%}

{%- if _acm_title != empty -%}
<h4>{{_acm_title}}</h4>
{%- else -%}
<div style="height:13px"></div>
{%- endif -%}

<div class="strip-line"></div>
<div class="row" style="clear: both">
  <div class="col-sm-{{_class}}">
    <ul>
      {%- assign _i = 0 -%}
      {%- for _item in _acm_items -%}
      {%- if _acm_limit == i -%}
      {%- assign _i = 0 -%}
    </ul>
  </div>
  <div class="col-sm-{{_class}}">
    <ul>
      {%- endif -%}
      <li>
        <a href="{{_item.url}}">{{_item.title}}</a>
      </li>
      {%- assign _i = _i | plus: 1 -%}
      {%- endfor -%}
    </ul>
  </div>
</div>

{%- else -%}

<div class="box">
  <div class="box-heading">
    {{_acm_title}}
  </div>
  <div class="strip-line"></div>
  <div class="box-content">
    <div class="row">
      <div class="col-sm-{{_class}}">
        <ul>
          {%- assign _i = 0 -%}
          {%- for _item in _acm_items -%}
          {%- if _acm_limit == i -%}
          {%- assign _i = 0 -%}
        </ul>
      </div>
      <div class="col-sm-{{_class}}">
        <ul>
          {%- endif -%}
          <li>
            <a href="{{_item.url}}">{{_item.title}}</a>
          </li>
          {%- assign _i = _i | plus: 1 -%}
          {%- endfor -%}
        </ul>
      </div>
    </div>
  </div>
</div>

{%- endif -%}