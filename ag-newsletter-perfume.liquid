<div class="perfume-newsletter clearfix row" id="newsletter{{_id}}">
  <div class="circle">
    {{_acm_title}}
  </div>
  <div class="row">
    <div class="col-sm-6">
      {{_acm_text}}
    </div>
    <div class="col-sm-6">
      <div class="inputs">
        <form action="{{settings.popup_mailchimp_action}}" method="post" name="mc-embedded-subscribe-form" target="_blank">
          <input type="email" class="email" name="EMAIL" required="required" placeholder="{{_placeholder}}" />
          <button type="submit" class="newsletter-submit-btn subscribe"><i class="fa fa-plus"></i></button>
        </form>
      </div>
    </div>
  </div>
</div>