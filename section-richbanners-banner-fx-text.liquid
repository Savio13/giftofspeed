{%-if fx_type == '0'-%}
<span class="text-wrapper">
  <span class="letters">
    {%-assign _l = texting | size | minus: 1-%}
    {%-for i in (0.._l)-%}
    {%-assign _t = texting | slice: i-%}
    {%-if _t == ' '-%}{{' '}}{%-else-%}<span class='letter' style="transform-origin:0 0;display:inline-block;">{{_t}}</span>{%-endif-%}
    {%-endfor-%}
  </span>
</span>
{%-elsif fx_type == '1'-%}
<span class="text-wrapper">
  <span class="line line1" style="background-color:{{_color}}"></span>
  <span class="letters">
    {%-assign _l = texting | size | minus: 1-%}
    {%-for i in (0.._l)-%}
    {%-assign _t = texting | slice: i-%}
    {%-if _t == ' '-%}{{' '}}{%-else-%}<span class='letter' style="transform-origin:0 0;display:inline-block;">{{_t}}</span>{%-endif-%}
    {%-endfor-%}
  </span>
  <span class="line line2" style="background-color:{{_color}}"></span>
</span>
{%-elsif fx_type == '2'-%}
  {%-assign _l = texting | size | minus: 1-%}
  {%-for i in (0.._l)-%}
  {%-assign _t = texting | slice: i-%}
  {%-if _t == ' '-%}{{' '}}{%-else-%}<span class='letter' style="transform-origin:0 0;display:inline-block;">{{_t}}</span>{%-endif-%}
  {%-endfor-%}
{%-elsif fx_type == '3'-%}
  {%-assign _l = texting | size | minus: 1-%}
  {%-for i in (0.._l)-%}
  {%-assign _t = texting | slice: i-%}
  {%-if _t == ' '-%}{{' '}}{%-else-%}<span class='letter' style="transform-origin:0 0;display:inline-block;">{{_t}}</span>{%-endif-%}
  {%-endfor-%}
{%-elsif fx_type == '4'-%}
{%-assign _ts = texting | split: ' '-%}
{%-for _w in _ts-%}
<span class="word">{{_w}}</span>
{%-endfor-%}
{%-else-%}
<span class="text-wrapper">
  <span class="line line1"></span>
  <span class="letters">
    {%-assign _l = texting | size | minus: 1-%}
    {%-for i in (0.._l)-%}
    {%-assign _t = texting | slice: i-%}
    {%-if _t == ' '-%}{{' '}}{%-else-%}<span class='letter' style="transform-origin:0 0;display:inline-block;">{{_t}}</span>{%-endif-%}
    {%-endfor-%}
  </span>
</span>
{%-endif-%}

<!-- section-richbanners-banner-fx-text.liquid => END -->