	<!-- product-page-info.liquid => START-->
<div class="product-center product clearfix">
  <div itemprop="offers" itemscope itemtype="http://schema.org/Offer">
    <h1 class="product_name_font name {% if settings.reviews_enable == false %}no-review{% endif %}">{{product.title}}</h1>
<!--     <div class="vendor">{{product.vendor | link_to_vendor}}</div> -->
    <div class="review row" style="margin-top: -21px !important;">
      {%- if settings.reviews_enable -%}
<!--       <a class="smoothscroll col-lg-6 col-md-6 col-sm-6" href="#product-reviews-a" style=" margin-top: 7%;">
        <span class="shopify-product-reviews-badge" data-id="{{product.id}}"></span>
      </a> -->
      {%- endif -%}
      {%- if settings.product_social_share and settings.product_design != "compact2" -%}
      <div class="share">
        {%- include "add-this" -%}
      </div>
      {%- endif -%}
      		
<!--     <div class="product_wishlist_margin col-lg-6 col-md-6 col-sm-6">
       {%- if settings.wishlist_enable or settings.compare_enable or settings.product_size_chart -%}
        <div class="links clearfix">
          {%- if settings.wishlist_enable -%}
          <div class="ex-link product_wishlist_width">
            {%- assign my_product = product -%}
            {%- include 'wishlist' -%}
          </div>
          {%- endif -%}
          {%- endif -%}
  		</div>	 -->
  	
    </div>
      </div>
    {%- comment -%}  INFO AND STOCK  {%- endcomment -%}

    {% if settings.product_info_sku or settings.product_info_status %}
    <div class="row description {%- if settings.product_info_status == false and settings.product_info_brand == false and settings.product_info_sku == false -%}{{- " hide" -}}{%- endif -%}">
      {% comment %}<p class="{%- if settings.product_info_brand == false -%}hide{%- endif -%}" ><span>{{'products.product.vendor' | t}}</span> <span>{{product.vendor | link_to_vendor}}</span></p>{% endcomment %}
      <p id="product_sku" class=" col-lg-6 col-md-6 col-sm-6 variant-sku sku_wrapper{%- if current_variant.sku == blank or settings.product_info_sku == false-%}{{- " hide" -}}{%- endif -%}">
    <span style="padding-right: 0px !important;">{{'products.product.sku' | t}}</span> 
        <span class="sku" itemprop="sku">{{ current_variant.sku }}</span>
      </p>
      <p class="col-lg-6 col-md-6 col-sm-6 variation-availability{%- if settings.product_info_status == false -%}{{- " hide" -}}{%- endif -%}" style="float: right; margin-top: 4%;">
        <span>{{- 'products.product.stock' | t}}</span>
        {%- if current_variant -%}
        {%- if current_variant.available -%}
        {%- if current_variant.inventory_management == "shopify" and current_variant.inventory_policy != "continue" -%}
        {%- if current_variant.inventory_quantity > 0 -%}
        <span class="product_stock_style stock stock-{{ section.id }} in-stock">{%- if settings.product_inventory == '1' -%}{{- current_variant.inventory_quantity  -}}{{- " " -}}{%- endif -%}{{ 'products.product.in_stock' | t | escape }}</span>
        {%- else -%}
        <span class="stock stock-{{ section.id }} out-of-stock">{{ 'products.product.out_of_stock' | t | escape }}</span>
        {%- endif -%}
        {%- else -%}
        <span class=" product_stock_style stock stock-{{ section.id }} in-stock">{{ 'products.product.in_stock' | t | escape }}</span>
        {%- endif -%}
        {%- else -%}
        <span class="stock stock-{{ section.id }} out-of-stock">{{ 'products.product.out_of_stock' | t | escape }}</span>
        {%- endif -%}
        {%- else -%}
        <span class="stock stock-{{ section.id }} out-of-stock">{{ 'products.product.unavailable' | t | escape }}</span>
        {%- endif -%}
      </p>
    </div>
    {% endif %}
    
      {%- comment -%} SHORT DESCRIPTION {%- endcomment -%}
      {%- if instructions.short_description != blank -%}
      <div class="short-description">{{- instructions.short_description  -}}</div>
      {%- endif -%}
      
    {%- comment -%} QUANTITY AND ADD TO CART {%- endcomment -%}
      <div id="product" class="product_price_border" style="padding-top:10px;">
        {%- if product.available -%}
        <meta itemprop="availability" itemtype="http://schema.org/ItemAvailability" content="http://schema.org/InStock" />
        {%- form 'product', product, id: "product-form", class: "product-form variations_form cart", data-product-id: product.id -%}
        
        <div class="cart" style="margin-bottom: 7px;">
          <div class="add_to_cart clearfix ">
            <div class="variations_button {%- unless current_variant -%}{{" hide"}}{%- endunless -%}{%- if instructions.external_link != blank and instructions.external_btn != blank -%}{{- " hide" -}}{%- endif -%}">
              <div class="add-cart-wrapper row">
               												 <!--PRICE START -->
                {%- comment -%} PRICE {%- endcomment -%}
    <div class=" product_price_width product-single__price-{{- section.id -}} col-lg-4 col-md-4 col-sm-4 col-xs-4">
        <div id="price" class="price">
          <span id="ComparePrice-{{- section.id -}}" class="amount price-old{%- unless current_variant.compare_at_price > current_variant.price %}{{- " hide" -}}{%- endunless -%}">
            <span class="money">
              {%- if current_variant.compare_at_price > current_variant.price -%}
              {{- current_variant.compare_at_price | money -}}
              {%- endif -%}
            </span>
          </span>
          {%- if current_variant.compare_at_price > current_variant.price -%}
          <span  id="ProductPrice-{{- section.id -}}" class=" amount price-new">
            <span class="money">
              {{- current_variant.price | money -}}
            </span>
          </span>
          {%- else -%}
          <span id="ProductPrice-{{- section.id -}}" class="product_price_style amount price-new">
            <span class="money">{{- current_variant.price | money -}}</span>
          </span>
          {%- endif -%}
          <span class="hide" itemprop="price">{{- product.price | money_without_currency -}}</span>
          <meta itemprop="priceCurrency" content="USD" />
        </div>
      </div>
                
                											<!--PRICE END -->
                
															<!--QUANTITY START -->
                <div class="product_quantity_width quantity-wrapper product_quantity_mobile  col-lg-4 col-md-4 col-sm-4 col-xs-4">
                  <p class="qty" style="margin-left: 21%;" >{{'products.product.quantity' | t}}</p>
                  <div class="quantity">
                    <input type="text" name="quantity" class="product_quantity_style quantity-cart-{{product.id}}" id="quantity_wanted" size="2" value="1" />
                    <a href="javascript:void(0);" class="q_up" data-product_id="{{product.id}}" id="q_up"><i class="fa fa-plus"></i></a>
                    <a href="javascript:void(0);" class="q_down" data-product_id="{{product.id}}" id="q_down"><i class="fa fa-minus"></i></a>
                  </div>
                </div>
                											<!--QUANTITY END -->
               											
                
               <!--BUY NOW BUTTON START-->
				
                <input type="submit" value="{%- unless current_variant.available -%} Out Of Stock{%- else -%}+           Add To Cart{%- endunless -%}"
                       id="AddToCart-{{ section.id }}"
                       class="col-lg-4 col-md-4 col-sm-4 col-xs-4 product_addtocart_btn product_button_width product_buy_button add_to_cart_btn button button-cart not-empty add-to-cart{%- unless current_variant -%}{{- " hide" -}}{%- endunless -%}" 
                       {%- unless current_variant.available -%}{{- " " -}}disabled="disabled"{{- " " -}}{%- endunless -%} 
                       data-loading-text="{{'products.product.loading' | t | escape}}"
                       data-addtocart="{{'products.product.add_to_cart' | t | escape}}" 
                       data-unavailable="{{'products.product.unavailable' | t | escape}}"
                       data-soldout="{{'products.product.sold_out' | t | escape}}" />
             							
                							<!--BUY NOW BUTTON END-->
              </div>
            </div>
            {%- if instructions.external_link != blank and instructions.external_btn != blank -%}
            {%- include 'product-external-btn' -%}
            {%- endif -%}
            <div class="clearfix"></div>
            {%- if settings.product_question -%}
            <a href="javascript:void(0);" class="button btn-default button-product-question"><i class="fa fa-envelope" style="margin-right: 5px;"></i>{{'products.product.ask_about_this_product' | t}}</a>
            {%- endif -%}
          </div>
        </div>
        
        <div  class="options{% if product.variants.size <= 1 %} none{% endif %}{%- if instructions.external_link != blank and instructions.external_btn != blank -%}{{- " hide" -}}{%- endif -%}">
          <div class="options2" style="padding: 7px !important; margin-bottom: 10px;">
            {%- if product.variants.size > 1 -%}
            
            {%- endif -%}
            {%- unless product.options.size == 1 and product.variants[0].title == 'Default Title' -%}
            <div id="variations-{{section.id}}" class="variations">
              <div id="variations-content-{{section.id}}">
                {%- for option in product.options_with_values -%}
                <div class="selector-wrapper{{- " " -}}{{- option.name | handlezie -}}{{- " " -}}variation-select-{{ section.id }}-{{ forloop.index0 }}">
                  <label {% if option.name == 'default' %} class="hide"{% endif %} for="single-option-selector-{{ forloop.index0 }}">{{- option.name -}}{%- if settings.product_swatch_color_advanced -%}:<span class="option-select-value" id="option-select-value-{{ section.id }}-{{ forloop.index0 }}">{{- option.selected_value -}}</span>{%- endif -%}</label>
                  <select id="single-option-selector-{{ section.id }}-{{ forloop.index0 }}" class="gift_wrapper_options single-option-selector single-option-selector-{{ section.id }}" data-index="option{{ forloop.index }}" data-option="option{{ forloop.index }}">
                    {%- for value in option.values -%}
                    <option value="{{ value | escape }}"{% if option.selected_value == value %} selected="selected"{% endif %}>{{ value }}</option>
                    {%- endfor -%}
                  </select>
                </div>
                {%- endfor -%}
              </div>
            </div>
            {%- endunless -%}
            <div id="product-variants" class="hide">
              <select name="id" id="ProductSelect-{{ section.id }}" data-section="{{ section.id }}" class="variation-select no-js">
                {%- for variant in product.variants -%}
                {%- if variant.available -%}
                <option {% if variant == product.selected_or_first_available_variant %} selected="selected" {% endif %} value="{{ variant.id }}">
                  {{- variant.title -}}
                </option>
                {%- else -%}
                <option disabled="disabled">{{ variant.title }} - {{ 'products.product.sold_out' | t | escape }}</option>
                {%- endif -%}
                {%- endfor -%}
              </select>
            </div>
          </div>
        </div>
        {%- endform -%}
        {%- else -%}
        <div class="cart">
          <div class="add_to_cart clearfix"  style="margin-bottom:10px;">
            {%- if instructions.external_link != blank and instructions.external_btn != blank -%}
            <div class="hide">
              {%- endif -%}
              <div class="add-cart-wrapper">
                <input type="button" value="{{'products.product.sold_out' | t | escape}}" id="button-cart" data-loading-text="{{'products.product.loading' | t | escape}}" class="button button-cart button-cart-sold-out outofstock_btn" disabled/>
              </div>
              {%- if instructions.external_link != blank and instructions.external_btn != blank -%}
            </div>
            {%- include 'product-external-btn' -%}
            {%- endif -%}
            <div class="clearfix"></div>
            {%- if settings.product_question -%}
            <a href="javascript:void(0);" class="button btn-default button-product-question"><i class="fa fa-envelope" style="margin-right: 5px;"></i>{{'products.product.ask_about_this_product' | t}}</a>
            {%- endif -%}
          </div>
        </div>
        <meta itemprop="availability" itemtype="http://schema.org/ItemAvailability" content="http://schema.org/OutOfStock" />
        {%- endif -%}

      </div>
    </div>
    {%- if instructions.trust_sale_img != blank -%}
    <div class="trust-sale-img">
      <img src="{{- instructions.trust_sale_img | file_img_url : "master" -}}">
    </div>
      {%- endif -%}
    {%- include 'product-question' -%}
    {%- include 'product-sizechart' -%}

<div id="tabs" class="htabs" style="padding-top:0px; text-align:left">
   
 <a href="#tab-description" class="selected">{{'products.product.description' | t}}</a>
 
   </div>
<div id="tab-description" class="tab-content" style="padding:0px"itemprop="description">{{product.description}}</div>
   

  </div>
  
</div>

<!-- product-page-info.liquid => END-->

