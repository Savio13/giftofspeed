  #footer-bottom-{{section.id}} #footer-blocks-bottom-{{block.id}}.footer-blocks-bottom .footer-block .caption{
    {%- if block.settings.footer_info_caption_size != '' -%}
    font-size: {{block.settings.footer_info_caption_size | plus:0}}px;
    {% endif %}
    {%- if block.settings.footer_info_caption_weight != '' -%}
    font-weight: {{block.settings.footer_info_caption_weight | plus:0}} !important;
    {%- endif -%}
  }
  #footer-bottom-{{section.id}} #footer-blocks-bottom-{{block.id}}.footer-blocks-bottom .footer-block .content{
    {%- if block.settings.footer_info_content_size != '' -%}
    font-size: {{block.settings.footer_info_content_size | plus:0}}px;
