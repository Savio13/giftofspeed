    {%- endif -%}
  }
  #footer-bottom-{{section.id}} #footer-blocks-top-{{block.id}}.footer-blocks-top .cell1 .{{block.settings.footer_info_cell1_decor}}{
    color: {{block.settings.footer_info_cell1_decor_color}};
