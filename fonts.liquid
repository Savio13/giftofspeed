
{%- assign GENERAL_FONT = settings.general_font | default:'Poppins' -%}
{%- assign HEADING_FONT = settings.heading_font | default:'Poppins' -%}
{%- assign SPECIAL_FONT = settings.special_font | default:'Poppins' -%}

{% comment %}
{%- if HEADING_FONT != GENERAL_FONT -%}
<link href="//fonts.googleapis.com/css?family={{HEADING_FONT | replace: ' ', '+'}}:300italic,400italic,500italic,600italic,700italic,800italic,100,200,300,400,500,600,700,800&subset=cyrillic-ext,greek-ext,latin,latin-ext,cyrillic,greek,vietnamese" rel='stylesheet' type='text/css' />
{%- endif -%}
{%- if SPECIAL_FONT != GENERAL_FONT and SPECIAL_FONT != HEADING_FONT -%}
<link href="//fonts.googleapis.com/css?family={{SPECIAL_FONT | replace: ' ', '+'}}:300italic,400italic,500italic,600italic,700italic,800italic,100,200,300,400,500,600,700,800&subset=cyrillic-ext,greek-ext,latin,latin-ext,cyrillic,greek,vietnamese" rel='stylesheet' type='text/css' />
{%- endif -%}
<link href="//fonts.googleapis.com/css?family={{GENERAL_FONT | replace: ' ', '+'}}:300italic,400italic,500italic,600italic,700italic,800italic,100,200,300,400,500,600,700,800&subset=cyrillic-ext,greek-ext,latin,latin-ext,cyrillic,greek,vietnamese" rel='stylesheet' type='text/css' />
{% endcomment %}

<script>
    WebFontConfig = {
        google: {
            families: []
        }
    };

{% if HEADING_FONT != GENERAL_FONT %}
WebFontConfig.google.families.push("{{HEADING_FONT | replace: ' ', '+'}}:300italic,400italic,500italic,600italic,700italic,800italic,100,200,300,400,500,600,700,800:cyrillic-ext,greek-ext,latin,latin-ext,cyrillic,greek,vietnamese");
{% endif %}
{%- if SPECIAL_FONT != GENERAL_FONT and SPECIAL_FONT != HEADING_FONT -%}
WebFontConfig.google.families.push("{{SPECIAL_FONT | replace: ' ', '+'}}:300italic,400italic,500italic,600italic,700italic,800italic,100,200,300,400,500,600,700,800:cyrillic-ext,greek-ext,latin,latin-ext,cyrillic,greek,vietnamese");
{%- endif -%}
WebFontConfig.google.families.push("{{GENERAL_FONT | replace: ' ', '+'}}:300italic,400italic,500italic,600italic,700italic,800italic,100,200,300,400,500,600,700,800:cyrillic-ext,greek-ext,latin,latin-ext,cyrillic,greek,vietnamese");

(function(d){
    var wf = d.createElement('script'), s = d.scripts[0];
    wf.src = 'https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js';
    wf.async = true;
    s.parentNode.insertBefore(wf, s);
})(document);
</script>