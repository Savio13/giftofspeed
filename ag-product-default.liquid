{%- assign _t = 'footer_bottom,footer,footer_top,footer_left,footer_right,customfooter_top,customfooter_bottom,customfooter' | split: ',' -%}
{%- if _t contains _ag_pos -%}

<h4>
  {%- if _acm_title != "" -%}
  {{_acm_title}}   
  {%- endif -%}
</h4>
<div class="strip-line"></div>
<div class="clearfix" style="clear: both">
  <div class="advanced-grid-products">
  {%- assign _i = 0 -%}
  {%- assign _product = _acm_product -%}
  {%- assign current_variant = _product.selected_or_first_available_variant | default: _product.variants.first -%}
  {%- assign featured_image = current_variant.featured_image | default: _product.featured_image -%}

  <div class="product clearfix">
    <div class="image" style="max-width:{{_acm_width}}px;">
      <a href="{{_product.url}}">
        {%- if settings.product_lazy_loading_image -%}
        <img src="{{'blank.gif' | asset_url}}" data-echo="{{featured_image | product_img_url:_acm_url_imgdim}}" alt="{{product.title | escape}}" />
        {%- else -%}
        <img src="{{featured_image | product_img_url:_acm_url_imgdim}}" alt="{{_product.title | escape}}" />
        {%- endif -%}
      </a>
    </div>
    <div class="right">
      <div class="name"><a href="{{_product.url}}">{{_product.title}}</a></div>
      <div class="price">
        {%- if _product.available -%}
        {%- if current_variant.compare_at_price > current_variant.price -%}
        <span class="price-old money">{{current_variant.compare_at_price | money}}</span>
        {%- endif -%}
        <span class="price-new money">{{current_variant.price | money}}</span>
        {%- else -%}
        <span class="price-old">{{'products.product.sold_out' | t}}</span>
        {%- endif -%}
      </div>
    </div>
  </div>
  </div>
</div>
{%- else -%}
<div class="box">
  <div class="box-heading">
    {{_acm_title}}
  </div>
  <div class="strip-line"></div>
  <div class="box-content products">
    <div class="clearfix" style="clear: both">
      <div class="advanced-grid-products">
        {%- assign _i = 0 -%}
        {%- assign _product = _acm_product -%}
        {%- assign current_variant = _product.selected_or_first_available_variant | default: _product.variants.first -%}
        {%- assign featured_image = current_variant.featured_image | default: _product.featured_image -%}

        <div class="product clearfix">
          <div class="image" style="max-width:{{_acm_width}}px;">
            <a href="{{_product.url}}">
              {%- if settings.product_lazy_loading_image -%}
              <img src="{{'blank.gif' | asset_url}}" data-echo="{{featured_image | product_img_url:_acm_url_imgdim}}" alt="{{product.title}}" />
              {%- else -%}
              <img src="{{featured_image | product_img_url:_acm_url_imgdim}}" alt="{{_product.title}}" />
              {%- endif -%}
            </a>
          </div>
          <div class="right">
            <div class="name">
              <a href="{{_product.url}}">{{_product.title}}</a>
            </div>
            <div class="price">
              {%- if current_variant.compare_at_price > current_variant.price -%}
              <span class="price-old money">{{current_variant.compare_at_price | money}}</span>         
              <span class="price-new money">{{current_variant.price | money}}</span>
              {%- else -%}
              <span class="price-new money">{{current_variant.price | money}}</span>
              {%- endif -%}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{%- endif -%}