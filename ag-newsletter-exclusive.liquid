<div class="exclusive-newsletter clearfix row" id="newsletter{{_id}}">
  <div class="col-sm-3">
    <div class="heading">
      <p>{{_acm_title}}</p>
    </div>
  </div>
  <div class="content-newsletter col-sm-5">
    <p>{{_acm_text}}</p>
  </div>
  <div class="inputs col-sm-4">
    <form action="{{settings.popup_mailchimp_action}}" method="post" name="mc-embedded-subscribe-form" target="_blank">
      <button type="submit" class="button subscribe">{{_bttext}}</button>
      <input type="email" class="email" name="EMAIL" required="required" placeholder="{{_placeholder}}" />
    </form>
  </div>
</div>