{%- if settings.sb_account_placement == 'left' -%}
<div class="col-md-3{% if settings.sb_account_mobile %} hidden-sm hidden-xs{% endif %}">
  {%- include 'sidebar-myaccount' -%}
</div>
{%- endif -%}
<div id="content" class="{% if settings.sb_account_placement != '' %}col-md-9{% else %}col-md-12{% endif %} center-column body-other content-with-background">
  <p>{{'customer.register.login_html' | t}}</p>
  {%- form 'create_customer' -%}
  <script src='//open-signin.okasconcepts.com/customer/script?shop=justminiature.myshopify.com'></script>
{%- if form.errors -%}
  <div class="warning">
    <button type="button" class="close" data-dismiss="alert">Ã—</button>
    {{form.errors | default_errors}}
  </div>
  {%- endif -%}
  <fieldset id="account" class="form-horizontal">
    <legend>{{'customer.register.text_your_details' | t}}</legend>
    <div class="form-group">
      <label class="col-sm-2 control-label" for="input-firstname">{{'customer.register.first_name' | t}}</label>
      <div class="col-sm-10">
        <input type="text" name="customer[first_name]" placeholder="{{'customer.register.first_name' | t}}" id="input-firstname" class="form-control" />
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label" for="input-lastname">{{'customer.register.last_name' | t}}</label>
      <div class="col-sm-10">
        <input type="text" name="customer[last_name]" placeholder="{{'customer.register.last_name' | t}}" id="input-lastname" class="form-control" />
      </div>
    </div>
    <div class="form-group required{% if form.errors contains 'email' %} has-error{% endif %}">
      <label class="col-sm-2 control-label" for="input-email">{{'customer.register.email' | t}}</label>
      <div class="col-sm-10">
        <input type="email" required="required" name="customer[email]" value="{{form.email}}" placeholder="{{'customer.register.email' | t}}" id="input-email" class="form-control" />
      </div>
    </div>
    <div class="form-group required{% if form.errors contains 'password' %} has-error{% endif %}">
      <label class="col-sm-2 control-label" for="input-password">{{'customer.register.password' | t}}</label>
      <div class="col-sm-10">
        <input type="password" required="required" name="customer[password]" placeholder="{{'customer.register.password' | t}}" id="input-password" class="form-control" />
      </div>
    </div>
  </fieldset>
  <div class="buttons">
    <div class="pull-right">
      <input type="submit" value="{{'customer.register.submit' | t}}" class="btn btn-primary" />
    </div>
  </div>
  {%- endform -%}
</div>
{%- if settings.sb_account_placement == 'right' -%}
<div class="col-md-3{% if settings.sb_account_mobile %} hidden-sm hidden-xs{% endif %}">
  {%- include 'sidebar-myaccount' -%}
</div>
{%- endif -%}