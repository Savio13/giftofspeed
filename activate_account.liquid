{%- if settings.sb_account_placement == 'left' -%}
<div class="col-md-3{% if settings.sb_account_mobile %} hidden-sm hidden-xs{% endif %}">
  {%- include 'sidebar-myaccount' -%}
</div>
{%- endif -%}
<div id="content" class="{% if settings.sb_account_placement != '' %}col-md-9{% else %}col-md-12{% endif %} center-column body-other content-with-background">
  {%- form 'activate_customer_password' -%}
  {%- if form.errors -%}
  <div class="warning">
    <button type="button" class="close" data-dismiss="alert">Ã—</button>
    {{form.errors | default_errors}}
  </div>
  {%- endif -%}
  <fieldset id="account" class="form-horizontal">
    <legend>{{'customer.activate_account.title' | t}}</legend>
    <p><em>{{'customer.activate_account.subtext' | t}}</em></p>
    <div class="form-group required">
      <label class="col-sm-2 control-label" for="input-password">{{'customer.activate_account.password' | t}}</label>
      <div class="col-sm-10">
        <input type="password" required="required" name="customer[password]" placeholder="{{'customer.activate_account.password' | t}}" id="input-password" class="form-control" />
      </div>
    </div>
    <div class="form-group required">
      <label class="col-sm-2 control-label" for="input-password2">{{'customer.activate_account.password_confirm' | t}}</label>
      <div class="col-sm-10">
        <input type="password" required="required" name="customer[password_confirmation]" placeholder="{{'customer.activate_account.password_confirm' | t}}" id="input-password2" class="form-control" />
      </div>
    </div>
  </fieldset>
  <div class="buttons">
    <input type="submit" value="{{'customer.activate_account.submit' | t}}" class="btn btn-primary" />
    <span class="ml20"><button type="submit" class="btn btn-default cancel" name="decline" id="customer_decline">{{'customer.activate_account.cancel' | t}}</button></span>
  </div>
  {%- endform -%}
</div>
{%- if settings.sb_account_placement == 'right' -%}
<div class="col-md-3{% if settings.sb_account_mobile %} hidden-sm hidden-xs{% endif %}">
  {%- include 'sidebar-myaccount' -%}
</div>
{%- endif -%}