<style>
  {%- if section.settings.heading_active_color != blank -%}
  #product-tab-{{section.id}}.filter-product .filter-tabs ul>li.active>a {
    color: {{section.settings.heading_active_color}}
  }
  {%- endif -%}
  {%- if section.settings.heading_active_border_color != blank -%}
  #product-tab-{{section.id}}.filter-product .filter-tabs ul > li.active > a::before {
    background-color: {{section.settings.heading_active_border_color}}!important
  }
  #product-tab-{{section.id}}.filter-product .filter-tabs ul > li > a {
    padding-bottom:0;
  }
  {%- endif -%}
  #product-tab-{{section.id}}.filter-product .filter-tabs ul>li>a {
    {%- if section.settings.heading_color != blank -%}
    color: {{section.settings.heading_color}};
    {%- endif -%}
    font-size: {{section.settings.heading_fontsize | append: "px"}};
    font-weight: {{section.settings.heading_fontweight}}!important
  }
</style>
{%- assign _skin = 'default' -%}
